<celestial.controls:AdornerDialog
    x:Class="Gathering_the_Magic.DeckEdit.UI.StartupDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:celestial.components="clr-namespace:Celestial.Components;assembly=Celestial"
    xmlns:celestial.controls="clr-namespace:Celestial.Controls;assembly=Celestial"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Gathering_the_Magic.DeckEdit.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Padding="20"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource Celestial.Brushes.Background}"
    Closing="startupDialog_Closing"
    Loaded="startupDialog_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            x:Name="titleTextBlock"
            Grid.Row="0"
            HorizontalAlignment="Center"
            FontSize="16"
            FontWeight="Bold"
            Text="Startup" />

        <StackPanel
            Grid.Row="1"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                x:Name="oldVersionTextBlock"
                HorizontalAlignment="Center"
                Foreground="LightGray" />
            <TextBlock
                x:Name="newVersionTextBlock"
                HorizontalAlignment="Center"
                Foreground="LightGray" />

            <TextBlock HorizontalAlignment="Center">
                <Hyperlink x:Name="startUpdateHyperLink" Click="startUpdateHyperLink_Click">
                    <TextBlock x:Name="startUpdateTextBlock" Text="Update App" />
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <Grid Grid.Row="2" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <celestial.components:InputFolderHeader
                x:Name="libraryFolderHeader"
                Title="Library Folder: "
                Grid.Row="0"
                Padding="0"
                Background="Transparent"
                FolderPathChanged="libraryFolderHeader_FolderPathChanged"
                SharedSizeGroup="A" />

            <TextBlock
                x:Name="listingFileNotFoundTextBlock"
                Grid.Row="1"
                Foreground="Red"
                Text="No listing file in Folder (app startup might be slow)."
                Visibility="Collapsed" />
        </Grid>

        <UniformGrid
            x:Name="startAppGrid"
            Grid.Row="3"
            VerticalAlignment="Bottom"
            Rows="1">
            <Button
                x:Name="createListingButton"
                Grid.Row="1000"
                Click="createListingButton_Click"
                Content="Create Listing"
                FontSize="16" />
            <Button
                x:Name="startButton"
                Grid.Row="1000"
                Click="startButton_Click"
                Content="Start"
                FontSize="16" />
        </UniformGrid>
    </Grid>
</celestial.controls:AdornerDialog>
